{
	"name": "svelte-triple-state-switch",
	"version": "2.0.0",
	"scripts": {
		"dev": "vite dev",
		"build:css": "npx tailwindcss -i ./src/lib/styles.css -o ./dist/styles.css",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint && npm run build:css",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"style": "./dist/styles.css"
		}
	},
	"main": "./dist/index.js",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"files": [
		"dist"
	],
	"peerDependencies": {
		"svelte": "^4.0.0",
		"tailwindcss": "^3.4.8"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^9.6.0",
		"@types/node": "^22.1.0",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"postcss": "^8.4.41",
		"postcss-cli": "^11.0.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.1.9",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.4.8",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.11"
	},
	"keywords": [
		"svelte",
		"switch",
		"toggle",
		"3 states",
		"component",
		"easy to use"
	],
	"license": "MIT",
	"author": {
		"email": "carlosd.vilaseca@avangenio.com",
		"name": "Carlos Daniel Vilaseca",
		"url": "https://github.com/carlos-err406"
	},
	"repository": {
		"url": "https://github.com/Carlos-err406/svelte-triple-state-switch",
		"type": "github"
	},
	"dependencies": {
		"clsx": "^2.1.1",
		"tailwind-merge": "^2.4.0"
	}
}
